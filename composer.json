{
    "repositories": [
        { "type": "composer", "url": "https://composer.typo3.org/" }
    ],
    "name": "pfaffenrodt/typo3-distribution-core",
    "license": "GPL-2.0+",
    "type": "library",
    "description" : "Core of TYPO3 CMS Distribution with console and .env support",
    "homepage": "https://github.com/pfaffenrodt/TYPO3-Distribution",
    "require": {
        "typo3/cms": "^7.6 || ^8.0",
        "helhum/config-loader": "^0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8.0"
    },
    "autoload": {
        "psr-4": {
            "Pfaffenrodt\\TYPO3\\Distribution\\": "src"
        }
    },
    "replace": {
        "typo3-distribution-core": "self.version"
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": "web"
        }
    }
}
